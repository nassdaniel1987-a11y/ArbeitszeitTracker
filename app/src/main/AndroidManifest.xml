<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- OSMDroid Map Berechtigungen -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Geofencing Berechtigungen -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArbeitszeitTracker">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ArbeitszeitTracker"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Zeit-Stempel Widget (Mittel 4x1) -->
        <receiver
            android:name="com.arbeitszeit.tracker.widget.TimeStampWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_START" />
                <action android:name="com.arbeitszeit.tracker.ACTION_END" />
                <action android:name="com.arbeitszeit.tracker.ACTION_PAUSE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_REFRESH" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_time_stamp_info" />
        </receiver>

        <!-- Zeit-Stempel Widget Klein (2x1) -->
        <receiver
            android:name="com.arbeitszeit.tracker.widget.TimeStampWidgetSmall"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_QUICK_STAMP_SMALL" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_time_stamp_small_info" />
        </receiver>

        <!-- Zeit-Stempel Widget Groß (4x2) -->
        <receiver
            android:name="com.arbeitszeit.tracker.widget.TimeStampWidgetLarge"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_START_LARGE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_END_LARGE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_PAUSE_LARGE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_time_stamp_large_info" />
        </receiver>

        <!-- Statistik Widget (3x2) -->
        <receiver
            android:name="com.arbeitszeit.tracker.widget.StatistikWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_REFRESH_STATS" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_statistik_info" />
        </receiver>

        <!-- Live Activity Widget (Laufende Zeit) -->
        <receiver
            android:name="com.arbeitszeit.tracker.widget.LiveActivityWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.arbeitszeit.tracker.ACTION_STOP_WORK" />
                <action android:name="com.arbeitszeit.tracker.ACTION_REFRESH_LIVE" />
            </intent-filter>
            <meta-data
                android:name="android:appwidget.provider"
                android:resource="@xml/widget_live_activity_info" />
        </receiver>

        <!-- Geofencing Receiver -->
        <receiver
            android:name=".geofencing.GeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Notification Action Receiver -->
        <receiver
            android:name=".notification.NotificationActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.arbeitszeit.tracker.ACTION_STAMP_START" />
                <action android:name="com.arbeitszeit.tracker.ACTION_STAMP_END" />
                <action android:name="com.arbeitszeit.tracker.ACTION_DISMISS" />
            </intent-filter>
        </receiver>

        <!-- FileProvider für Share-Funktion (Excel-Export) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>