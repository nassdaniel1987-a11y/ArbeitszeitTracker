<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/widget_background">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arbeitszeit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/widget_title"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Start Zeit Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:background="@color/widget_card_background"
        android:padding="8dp">

        <Button
            android:id="@+id/widget_start_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Start"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Von:"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp" />

        <TextView
            android:id="@+id/widget_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text" />
    </LinearLayout>

    <!-- Ende Zeit Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/widget_card_background"
        android:padding="8dp">

        <Button
            android:id="@+id/widget_end_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ende"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bis:"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp" />

        <TextView
            android:id="@+id/widget_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text" />
    </LinearLayout>

</LinearLayout>
