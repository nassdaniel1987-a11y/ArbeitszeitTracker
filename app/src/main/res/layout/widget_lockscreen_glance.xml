<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/widget_background"
    android:gravity="center">

    <!-- Status Icon & Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/widget_lockscreen_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️"
            android:textSize="20sp"
            android:paddingEnd="6dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_lockscreen_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arbeitszeit läuft"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/widget_title" />

            <TextView
                android:id="@+id/widget_lockscreen_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seit 08:00"
                android:textSize="10sp"
                android:textColor="@color/widget_text" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_progress_background"
        android:layout_marginVertical="6dp" />

    <!-- Heute Arbeitszeit (Kompakt) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Heute"
            android:textSize="11sp"
            android:textColor="@color/widget_text" />

        <TextView
            android:id="@+id/widget_lockscreen_today_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/widget_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" h"
            android:textSize="11sp"
            android:textColor="@color/widget_text"
            android:paddingStart="2dp" />
    </LinearLayout>

    <!-- Überstunden Kompakt (optional, nur wenn Platz) -->
    <LinearLayout
        android:id="@+id/widget_lockscreen_overtime_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Σ Überstd."
            android:textSize="10sp"
            android:textColor="@color/widget_text" />

        <TextView
            android:id="@+id/widget_lockscreen_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0:00"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/widget_status_active" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" h"
            android:textSize="10sp"
            android:textColor="@color/widget_text"
            android:paddingStart="2dp" />
    </LinearLayout>

</LinearLayout>
